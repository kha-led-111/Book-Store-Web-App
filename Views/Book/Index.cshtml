@model IEnumerable<Book>

@{
	ViewData["title"] = "List of Authors";
}

<div class="row">
   
	@foreach(var item in Model)
    {
        <div class="col-md-4 col-xs-6  mb-3 d-flex">
            <div class="card h-100 shadow-sm flex-fill" >
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                   @item.Book_Name
                                   <a class=" text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.Image" class="img-fluid h-100"style="object-fit:cover" alt="@item.Book_Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body flex-grow-1">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Author: </b>@item.Author.fullname</p>
                            <p class="card-text"><b>Category: </b>@item.Category</p>
                            <p class="card-text"><b>PublishHouse:</b>@item.Publish_house.Fullname</p>
                            <p class="card-text"><b>Publish Date: </b>@item.Publish_data.ToString("dd MMM yy")</p>

                            <p class="card-text">
                                <b>Status: </b>
                                @{
                                    var today = DateOnly.FromDateTime(DateTime.Now);
                                }

                                @if (item.Publish_data <= today)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">UPCOMING</span>
                                }
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer mt-auto">
                            <!-- <p class="card-text ">-->
                                <div class="d-flex justify-content-between">
                                <a class="btn btn-outline-primary float-end" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Det ails
                                </a>
                                <a class="btn btn-success text-white float-start" style="padding:5px" >
                                    <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.price.ToString("c"))
                                </a>
                            </div>
                            <!-- </p>-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
		

	

</div>
<div style="position:fixed; right:45px; bottom:75px; " class="text-white">
    <a asp-controller="Book" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>

</div>