@model Book

@{
	ViewData["title"] = "Delete Author";
}
<div class="row text">
	<div class="col-md-8 offset-2">
		<h1>Delete confirmation For @Model.Book_Name</h1>

		<div class="row">
			<div class="col-md-8 offset-2">
				<div class="form-group text-center">
					<img id="Profile_picture_per" width="150px" />
				</div><br />
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger">
					</div><br />
					<div class="form-group text-center">
						<img id="Shoplogoperview" />
					</div><br />
					<div class="form-group">
						<label asp-for=" Image" class="control-lable"></label>
						<input asp-for=" Image" class="form-control" />
						<span asp-validation-for=" Image" class="text-danger"></span>
					</div><br />
					<div class="form-group">
						<label asp-for="Book_Name" class="control-lable"></label>
						<input asp-for="Book_Name" class="form-control" />
						<span asp-validation-for="Book_Name" class="text-danger"></span>
					</div><br />
					<div class="form-group">
						<label asp-for="Description" class="control-lable"></label>
						<input asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div><br />
					

				</form>
				<div class="form-group" style="justify-content:space-between;">
					<form asp-action="Delete">
						<input type="hidden" asp-for="Id" />
						<input type="submit" class="btn btn-outline-danger float-end" value="confirm Delete" />
					</form>

					<a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
				</div>



			</div>
		</div>
	</div>
</div>
@section script {
	<script>
		$(document).ready(function(){
			var output=document.getElementById('Profile_picture_per');
			output.src=$("#Image").val();

		})
	</script>


}