@model IEnumerable<Author>
@{
	ViewData["title"] = "List of Authors";
}
<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>@Html.DisplayNameFor(Model => Model.Profile_picture)</th>
					<th>@Html.DisplayNameFor(Model => Model.fullname)</th>
					<th>@Html.DisplayNameFor(Model => Model.Bio) </th>
					<th>Actions </th>
				</tr>

			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="@item.Profile_picture" style="max-width:150px" />
						</td>
						<td class="align-middle">@Html.DisplayFor(Model => item.fullname)</td>
						<td class="align-middle">@Html.DisplayFor(Model => item.Bio)</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary" asp-controller="Author" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>|
							<a class="btn btn-outline-info" asp-controller="Author" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>|
							<a class="btn btn-danger" asp-controller="Author" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>


						</td>
					</tr>
				}
			</tbody>
		</table>


	</div>


</div>
<div style="position:fixed; right:45px; bottom:75px; " class="text-white">
	<a asp-controller="Author" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>

</div>
