
@* define model *@
@model IEnumerable<Shop>

@* define View data *@
@{

}
@* write code *@
<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>@Html.DisplayNameFor(Model => Model.Shoplogo)</th>
					<th>@Html.DisplayNameFor(Model => Model.Name)</th>
					<th>@Html.DisplayNameFor(Model => Model.Location) </th>
					<th>Actions </th>
				</tr>
			
			</thead>
            <tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="@item.Shoplogo" style="max-width:150px"  />
						</td>
						<td class ="align-middle">@Html.DisplayFor(Model=>item.Name)</td>
						<td class="align-middle">@Html.DisplayFor(Model => item.Location)</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary" asp-controller="Shop" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>|
							<a class="btn btn-outline-info" asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
							<a class="btn btn-danger" asp-controller="Shop" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>


						</td>
                   </tr>
				}
			</tbody>
</table>


	</div>


</div>
<div style="position:fixed; right:45px; bottom:75px; " class="text-white">
	<a asp-controller="Shop" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>

</div>
	
